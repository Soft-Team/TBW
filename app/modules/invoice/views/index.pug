html(xmlns='http://www.w3.org/1999/xhtml')
  head
  body
    link(rel='stylesheet', type='text/css', href='/assets/custom/voucher.css')
    #page-wrap
      div(align="center")
        h1.title TRABAWHO
      br
      br
      each invoice, index in invoicetab
        if index == 0
          #identity
            #address
              | Provider Details
              br
              | Account No. : #{invoice.prepAccNo}
              br
              | Name : #{invoice.strName}
              br
              | E-mail : #{invoice.strEmail}
        else
          #customer
            #customer-title
              | Seeker Details
              br
              | Account No. : #{invoice.prepAccNo}
              br
              | Name : #{invoice.strName}
              br
              | E-mail : #{invoice.strEmail}
            table#meta
              tr
                td.meta-head Transaction #
                td #{invoice.prepTransID}
              tr
                td.meta-head Date Scheduled
                td #{invoice.date}
              tr
                td.meta-head Amount Due
                if invoice.intTransPriceType == 1
                  td Php #{invoice.formatPrice}
                else
                  td Php #{invoice.formatPrice}/hr
      div(align="center")
        Label &nbspSERVICE INVOICE
      each invoice, index in invoicetab
        if index == 1
          table#items
            tr
              th(style="padding-left: 20px; padding-right: 20px;") Service 
              th(style="padding-left: 20px; padding-right: 20px;") Price
            tr.item-row
              td
                text #{invoice.strServName}
              td
                if invoice.intTransPriceType == 1
                  text Php #{invoice.formatPrice}
                else
                  text Php #{invoice.formatPrice}/hr
                br
                br
      br
      br
      h8
        | -
      h9
        | -
      #terms
        h5 Terms
        text
          | Print This Form.
          br
          |(Ctrl + p)
      p &nbsp
