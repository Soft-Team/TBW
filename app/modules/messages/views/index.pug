      // Messages & Info
      .col-sm-9.panel-wrap
        // Main Content / Message List
        #Messages.col-sm-9.section-wrap
          // Header
          each user in usertab
            .row.header-wrap
              .chat-header.col-sm-12
                if messOne.sendType == 1
                  h4(style='color:gold') ##{messOne.strServName} #{messOne.Seeker}
                else
                  h4(style='color:gold') ##{messOne.strServName} #{messOne.strName}
            // Messages
            .row.content-wrap.messages
              .col
                each mess in messtab
                  .msg
                    .media-body
                      small.pull-right.time
                        i.fa.fa-clock-o
                        |  12:10am
                      if mess.sendType == mess.intSender
                          h5.right.media-heading #{user.strName}
                      else
                        if user.intAccNo == mess.SAccNo
                            h5.left.media-heading #{mess.strName}
                        else
                            h5.left.media-heading #{mess.Seeker}
                      small.col-sm-11
                        |  #{mess.txtMessage}
            // Message box & Send Button
            .row.send-wrap
              .send-message
                .message-text
                  textarea.no-resize-bar.form-control(rows='2', placeholder='Write a message...')
                .send-button
                  a.btn
                    | Send 
                    i.fa.fa-send
  each user in usertab
    #mario-chat
      #chat-window
        #output
          each mess in messtab
            if mess.sendType == mess.intSender
              p.right
                strong #{user.strName} :
                | &nbsp#{mess.txtMessage}
            else
              if user.intAccNo == mess.SAccNo
                p.left
                  strong #{mess.strName} :
                  | &nbsp#{mess.txtMessage}
              else
                p.left
                  strong #{mess.Seeker} :
                  | &nbsp#{mess.txtMessage}
      input#chatid(type='text', name='chatid', value= messOne.intChatID, hidden)
      input#handle(type='text', name='handle', value= user.strName, hidden)
      input#sender(type='text', name='handle', value= messOne.sendType, hidden)
      input#message(type='text', name='message', placeholder='Message')
      button#send Send
