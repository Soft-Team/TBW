extends ../../../templates/dash-admin.pug

block main
    .jumbotron-admin
        center
            h1 Active Users
    p  
    center
    .container
        p.font
            table.table.table-striped.table-hover.box-shadow-mini
                thead
                    tr  
                        th(scope='col') #
                        th(scope='col') Username
                        th(scope='col') Name
                        th(scope='col') Barangay
                        th(scope='col') City
                        th(scope='col') Email
                        th(scope='col') Contact No.
                        th(scope='col') User Type
                        th(scope='col') Status
                        th(scope='col') &nbsp

                tbody
                each user in resultspug
                    tr
                        td(style="padding-right: 20px; padding-bottom: 10px;") #{user.intAccNo}
                        td 
                            a(href=`/profile/${user.intAccNo}`) #{user.strUserName}
                        td #{user.strName}
                        td #{user.strBarangay}
                        td #{user.strCity}
                        td #{user.strEmail}
                        td #{user.strContactNo}
                        if user.intType =='2'
                            td Normal
                        else if user.intType =='3'
                            td Business
                        else
                            td Admin
                        if user.intStatus == '1'
                            td Unverified
                        else 
                            td Verified
                        td 
                            a.btn.btn-outline-danger(href=`/admin/Banned/${user.strUserName}`) Ban  
                                