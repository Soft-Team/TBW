extends ../../../templates/master-worker.pug

block content
  block append scripts
    script(type='text/javascript', src='/assets/scripts/bootstrap-filestyle.min.js')
    script.
      $(":file").filestyle();
  .container-fluid
      .row.mh-100vh
          #bg-block.col-lg-6.d-flex.align-items-end(style='background-image:url("/assets/images/worker.jpg");background-size:cover;background-position:center center;')
            p.ml-auto.small.text-dark.mb-2
                br
          #login-block.col-10.col-sm-8.col-md-6.col-lg-6.offset-1.offset-sm-2.offset-md-3.offset-lg-0.align-self-center.d-lg-flex.align-items-lg-center.align-self-lg-stretch.bg-white.p-5.rounded.rounded-lg-0.my-5.my-lg-0(style="float:right;")
            .m-auto.w-lg-75.w-xl-55
                h2.mb-3.text-center(style='color:#34495E;')
                  img(src='assets/images/tbw.ico' style='height: 20%; width: 20%;')
                  | Your First Workers
                form(method='POST' action='/home/worker' enctype='multipart/form-data')
                    .form-group
                      input#worker1.form-control(type='text' name='worker1' aria-describedby='workerHelp' placeholder="First Worker" required)
                    .form-group
                      input#workid1.filestyle(type='file' name='workid1' aria-describedby='workerid1Help' data-classbutton='btn btn-primary' data-input='false' data-classicon='icon-plus' accept='image/*' required)
                      small#workerid1.form-text.text-muted Worker ID of first worker will be displayed publicly.
                    hr
                    .form-group
                      input#worker2.form-control(type='text' name='worker2' placeholder="Second Worker" required)
                    .form-group
                      input#workid2.filestyle(type='file' name='workid2' aria-describedby='workerid2Help' data-classbutton='btn btn-primary' data-input='false' data-classicon='icon-plus' accept='image/*' required)
                      small#workerid2.form-text.text-muted Worker ID of second worker will be displayed publicly.
                    button.btn.btn-primary.btn-md.btn-block.mb-2(type='submit') Submit
                    p
                    small
                        b Support E-mail: trabawho.sup@gmail.com
      .col
