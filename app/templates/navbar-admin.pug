extends master.pug

block content
  nav.navbar.navbar-expand-md.navbar-dark(style='background-color: #EC9B00;')
    .container-fluid
      a.navbar-brand(href='/admin')
        img(src='/assets/images/tbw.ico', width='50', height='50', alt='Trabawho')
        span
          b TrabaWHO
      button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarNav', aria-controls='navbarNav', aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarNav.collapse.navbar-collapse.navbarNavDropdown.justify-content-end
        ul.navbar-nav
          li.nav-item.active
            a.nav-link.nav-text(data-toggle='modal' data-target='#AddServiceTag') Add Service Tag &nbsp&nbsp
          li.nav-item.active
            a.nav-link.nav-text(href='/login') Sign-out &nbsp&nbsp
            
  #AddServiceTag.modal.fade(tabindex='-1', role='dialog', aria-labelledby='AddServiceTagTitle', aria-hidden='true')
    .modal-dialog(role='document')
      .modal-content
        form(method='POST' action='/admin/add' style="margin-bottom:0px !important")
          .modal-header
            h5#AddServiceTagTitle Add Service Tag
            button.close(type='button', data-dismiss='modal', aria-label='Close')
              span(aria-hidden='true') 
          .modal-body
            .row
              .col
                .form-group
                  label(for='servtag')
                    b Service Tag
                  input#servtag.form-control(type='text' name='tag' aria-describedby='servtagHelp' maxlength="45" required)
                  small#servtagHelp.form-text.text-muted Service Tag will be Permanent
          .modal-footer
            button.editbuttons.btn.btn-primary.btn-md(type='submit') Submit
            button.btn.btn-secondary(type='button', data-dismiss='modal') Close

  .dash
    block dash
