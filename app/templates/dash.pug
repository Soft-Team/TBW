extends navbar.pug

block dash
  block append scripts
    script.
      function dropdown1(){
        if(document.getElementById('sub1').style.display=='block'){
        document.getElementById('sub1').style.display='none';
        document.getElementById('drop1').style.background='#282B30';
        }
        else{
          document.getElementById('sub1').style.display='block';
          document.getElementById('drop1').style.background='#3498DB';
        }
      };
  .container-fluid.dashboard
    .row
      .col
        .user-panel
            .pull-left.image
              .chat-pad(style="height: 50px, width: 50px")
                .chat-img(style="height: 50px, width: 50px")
                  i(style='height: 50px; background-image: url("/assets/images/Tyler.jpg"); background-position: 50% 50%; background-repeat: no-repeat; background-size: cover; width: 50px;')
                //- img(src='/assets/images/Tyler.jpg', alt='User Image', style='height: 50px, width: 50px')
            .pull-right.info
                each thisuser in thisUserTab
                  p.text-white(style="margin-top: 10px") #{thisuser.strName}
                  //- a(href='/profile/'+thisuser.intAccNo)
            // search form
            form.sidebar-form(action='#', method='get')
            .input-group
                input.form-control(type='text', name='q', placeholder='Search...')
                button#search-btn.btn.btn-flat(type='submit', name='search', href="")
                   i.fa.fa-search(aria-hidden='true')
        #sidebar
          .row
            .col
              a.row.main-row(href='/scheduler')
                h4 Scheduler
              a.row.main-row(href='/services')
                h4 Services
              a.row.main-row(href='/myservices')
                h4 My Services
              #drop1.row.main-row.text-white(onclick='dropdown1()')
                h4
                  a Transactions
              #sub1.row
                a.row(href='/transactions/ongoing')
                  h4 Ongoing
                a.row(href='/transactions/finished')
                  h4 Finished
                a.row(href='/transactions/log')
                  h4 Log
            .col  
      .col
        .row
            .col-sm-12.main
              link(rel='stylesheet', type='text/css', href='/assets/custom/contentstyles.css')
              link(rel='stylesheet', type='text/css', href='/assets/custom/messages.css')
              link(rel='stylesheet', type='text/css', href='https://fonts.googleapis.com/css?family=Open+Sans')
              block main
